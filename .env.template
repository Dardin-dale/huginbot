# HuginBot Environment Configuration
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default

# Valheim Server Settings
VALHEIM_SERVER_NAME=ValheimServer
VALHEIM_WORLD_NAME=ValheimWorld
VALHEIM_SERVER_PASSWORD=changeThisPassword!
VALHEIM_ADMIN_IDS=76561198012345678 76561198087654321

# Discord Integration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Multi-World Configuration
# Format: name,discord_server_id,world_name,server_password
# Example: MyWorld,123456789012345678,Midgard,password1
WORLD_CONFIGURATIONS=World1,123456789012345678,Midgard,password1;World2,876543210987654321,Asgard,password2

# Backup Configuration
BACKUP_FREQUENCY_HOURS=24
BACKUPS_TO_KEEP=7