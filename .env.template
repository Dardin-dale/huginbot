# HuginBot Environment Configuration
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default

# CUSTOM DOMAIN (OPTIONAL) - ROUTE 53
CUSTOM_URL=myValheimURL.net

# Valheim Server Settings
VALHEIM_SERVER_NAME=ValheimServer
VALHEIM_WORLD_NAME=ValheimWorld
VALHEIM_SERVER_PASSWORD=changeThisPassword!
VALHEIM_ADMIN_IDS=your_steam_id_number friend_steam_id_number

# Reccommended Docker settings
# crossplay may help with older machines 
# bepinex for mod management
# update on launch only server should shut down after leaving
VALHEIM_SERVER_ARGS= -crossplay
VALHEIM_BEPINEX=true
VALHEIM_UPDATE_IF_IDLE=false


# Discord Integration
DISCORD_APP_ID=your_discord_client_id_here
DISCORD_BOT_PUBLIC_KEY=your_discord_bot_public_key_here
DISCORD_BOT_SECRET_TOKEN=your_discord_bot_token_here

# Multi-World Configuration
# Format: name,discord_server_id,world_name,server_password
# Example: MyWorld,123456789012345678,Midgard,password1
WORLD_CONFIGURATIONS=World1,123456789012345678,Midgard,password1;World2,876543210987654321,Asgard,password2

# Backup Configuration
BACKUP_FREQUENCY_HOURS=24
BACKUPS_TO_KEEP=7
