# ============================================================================
# MINIMAL HUGINBOT CONFIGURATION
# ============================================================================
# This is the absolute minimum configuration needed to get HuginBot running
# Copy to .env and fill in your actual values
#
# See .env.example for full configuration options
# See docs/ for detailed setup guides
# ============================================================================

# === AWS CONFIGURATION ===
AWS_REGION=us-west-2
AWS_PROFILE=default

# === SERVER SETTINGS ===
VALHEIM_SERVER_NAME="My Valheim Server"
VALHEIM_SERVER_ARGS="-crossplay"
VALHEIM_BEPINEX=true
VALHEIM_INSTANCE_TYPE=t3.medium

# === WORLD CONFIGURATION ===
# At least one world is required
WORLD_1_NAME=MainWorld
WORLD_1_WORLD_NAME=Midgard
WORLD_1_PASSWORD=changeme123
WORLD_1_DISCORD_ID=123456789012345678
WORLD_COUNT=1

# === DISCORD SETTINGS ===
# Get these from: https://discord.com/developers/applications
DISCORD_APP_ID=123456789012345678
DISCORD_BOT_PUBLIC_KEY=your_64_character_public_key_here
DISCORD_BOT_SECRET_TOKEN=your_bot_token_here

# === BACKUP SETTINGS ===
# Use defaults for backups
BACKUPS_TO_KEEP=7
BACKUP_FREQUENCY_HOURS=24
DOCKER_BACKUP_CRON="0 */2 * * *"
DOCKER_BACKUP_MAX_COUNT=12
DOCKER_BACKUP_MAX_AGE=1440
DOCKER_BACKUP_IF_IDLE=false
DOCKER_BACKUP_IDLE_GRACE=60
DOCKER_BACKUP_COMPRESS=true
